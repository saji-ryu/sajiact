{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": "./",
    "target": "ES2015",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es5", "es6", "es2016", "es2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true
  }
}
